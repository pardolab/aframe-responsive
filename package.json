{
  "name": "aframe-responsive-component",
  "version": "0.1.0",
  "description": "Brings responsive design based on the user&#39;s controller.",
  "main": "index.js",
  "cdn": "dist/aframe-responsive-component.min.js",
  "scripts": {
    "dev": "budo index.js:dist/aframe-responsive-component.min.js --port 7000 --live --open",
    "dist": "webpack index.js dist/aframe-responsive-component.js && webpack -p index.js dist/aframe-responsive-component.min.js",
    "lint": "semistandard -v | snazzy",
    "prepublish": "npm run dist",
    "ghpages": "ghpages",
    "start": "npm run dev",
    "test": "karma start ./tests/karma.conf.js",
    "test:firefox": "karma start ./tests/karma.conf.js --browsers Firefox",
    "test:chrome": "karma start ./tests/karma.conf.js --browsers Chrome"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pardolab/aframe-responsive-componentt.git"
  },
  "keywords": [
    "aframe",
    "aframe-component",
    "aframe-vr",
    "vr",
    "mozvr",
    "webvr",
    "responsive"
  ],
  "author": "Pardo Lab <contact@pardolab.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pardolab/aframe-responsive-componentt/issues"
  },
  "homepage": "https://github.com/pardolab/aframe-responsive-componentt#readme",
  "devDependencies": {
    "aframe": "*",
    "browserify": "^13.0.0",
    "budo": "^8.2.2",
    "chai": "^3.4.1",
    "chai-shallow-deep-equal": "^1.3.0",
    "ghpages": "^0.0.8",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-typescript": "^3.2.3",
    "gulp-uglify": "^3.0.0",
    "karma": "^0.13.15",
    "karma-browserify": "^4.4.2",
    "karma-chai-shallow-deep-equal": "0.0.4",
    "karma-chrome-launcher": "2.0.0",
    "karma-env-preprocessor": "^0.1.1",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.3",
    "karma-sinon-chai": "^1.1.0",
    "mocha": "^2.3.4",
    "randomcolor": "^0.4.4",
    "semistandard": "^8.0.0",
    "shelljs": "^0.7.0",
    "shx": "^0.1.1",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "snazzy": "^4.0.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.3.0",
    "webpack": "^1.13.0"
  },
  "semistandard": {
    "globals": [
      "AFRAME",
      "THREE"
    ],
    "ignore": [
      "examples/build.js",
      "dist/**"
    ]
  },
  "dependencies": {
    "@types/three": "^0.84.35",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "pump": "^2.0.0",
    "typescript": "^2.6.2"
  }
}
